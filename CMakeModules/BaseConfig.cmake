      set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -Wshorten-64-to-32 -D_BSD_SOURCE")
    endif(APPLE)
    if (UNIX)
        set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -fPIC ")
        if (NOT APPLE)
            set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -D_BSD_SOURCE -D_POSIX_C_SOURCE=199309L")
        endif(NOT APPLE)
    endif(UNIX)
